/* 设置一个底色来分割不同功能部分 */
.divider {
  height: 20rpx;
  width: 100%;
  background-color: #f5f5f5;
  box-shadow: 0rpx 5rpx 5rpx rgba(0,0,0,0.2) inset;
}
/* 箭头 */
.arrow {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.arrow::after {
  content:'';
  width: 16rpx;
  height: 16rpx;
  border-top: 3rpx solid #ccc;
  border-right: 3rpx solid #ccc;
  transform: rotate(45deg);
  -webkit-transform: rotate(45deg);
}
/* 水平垂直居中 */
.center {
  display: flex;
  justify-content: center;
  align-items: center;
}
/* 超出部分隐藏以省略号显示 */
.hide {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}