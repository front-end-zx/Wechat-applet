/* pages/profile/profile.wxss */
page {
  background-color: #f5f5f5;
}
.card {
  margin: 60rpx 20rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  border: 1px solid #ddd;
  border-radius: 10rpx;
  background-color: #fff;
}
.card-title {
  font-size: 18px;
  font-weight: 600;
}
.card-time {
  padding: 20rpx 0rpx;
  margin-bottom: 20rpx;
  border-bottom: 1px solid #ccc;
  font-size: 12px;
  color: #ccc;
}
.card-img image {
  width: 100%;
  height: 300rpx;
}
.card-desc {
  margin: 20rpx 0rpx;
  padding-bottom: 20rpx;
  font-size: 16px;
  font-weight: 600;
  border-bottom: 1px solid #ccc;
  color: #555;
}
.card-read {
  font-size: 13px;
  color: #ccc;
}