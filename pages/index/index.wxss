/**slide**/
.slide, swiper {
  width: 100%;
  height: 350rpx;
  overflow: hidden;
}
.slide image{
  width: 100%;
  height: 350rpx;
}

/* 导航栏 */
.index-nav {
  display: flex;
  flex-wrap: wrap;
}
.index-nav .nav-item {
  width: 50%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-right: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  box-sizing: border-box;
}
.index-nav .nav-item:nth-of-type(2n) {
  border-right: 0 none;
}
.nav-item image {
  width: 80rpx;
  height: 80rpx;
}
.nav-item text {
  padding-top: 20rpx;
  font-size: 14px;
  color: #666;
}

/* index-enter部分 */
.index-enter {
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.index-enter .enter-item {
  width: 50%;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.enter-item image {
  width: 320rpx;
  height: 200rpx;
}
